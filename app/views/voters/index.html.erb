<div class="page-header">
    <h1>Voter Roll</h1>
</div>

<div class="btn btn-success">
    <%= link_to "Enter New Voter Record", new_voter_path %>
</div>

<% @voters.each do |voter| %>
<div class="voter">
    <strong><u><%= voter.name %></u></strong>
    <p><strong>Address: </strong><%= voter.address %></p>
    <p><strong>County: </strong><%= voter.county %></p>
    <p><strong>Phone: </strong><%= voter.phone %></p>
    <p><strong>Email: </strong><%= voter.email %></p>
    <p><strong>Party Affiliation: </strong><%= voter.party_affiliation %></p>
    <p><strong>Confirmed Vote: </strong><%= voter.confirmed_vote %></p>
    <div class="meta">
        <em>Entry created: <%= time_tag(voter.created_at) %></em>
        <span class="admin">
            | <%= link_to "Edit", edit_voter_path(voter) %> |
            <%= link_to "Delete", voter, method: :delete, data: { confirm: "Don't you dare!"} %>
            | <%= link_to "Assign volunteers"%>
        </span>
    </div>
</div>
<% end %>
